!!!
%html
  %head
    %link{:href => 'http://fonts.googleapis.com/css?family=PT+Sans&subset=latin', :rel => 'stylesheet',  :type => 'text/css'}
    
    %title Logbook
    = stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/warehouse/style", "web-app-theme/override", "dateinput", :cache => true
    = javascript_include_tag :defaults, :cache => true
    = javascript_include_tag 'http://cdn.jquerytools.org/1.2.5/all/jquery.tools.min.js'
    = csrf_meta_tag
  %body
    #container
      #header        
        %h1#logo
          %a{:href => "/"} { Logbook }
        #user-navigation
          %ul.wat-cf
            - if current_user
              %li
                %a{:href => "/users/edit"}= current_user.display_name 
              %li
                = link_to(t("web-app-theme.logout", :default => "Logout"), destroy_user_session_path, :class => 'logout' )
            - else
              %li
                = link_to_unless_current(t('signup', :default => "Signup"), new_user_registration_path)
              %li
                = link_to_unless_current(t("web-app-theme.login", :default => "Login"), new_user_session_path)
        #main-navigation
          %ul.wat-cf
            %li
              - if current_user
                %a{:href => "/"}= t("web-app-theme.settings", :default => "Dashboard")
              - else
                %a{:href => "/"} &nbsp;
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main{:class => controller_name}
          = yield

        #sidebar
          = yield :sidebar
    #footer
      %p
        Copyright &copy; #{Time.now.year} Logbook
