!!!
%html
  %head
    %title LogBook
    = stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/warehouse/style", "web-app-theme/override", :cache => true
    = javascript_include_tag :defaults, :cache => true
    = csrf_meta_tag
  %body
    #container
      #header        
        %h1
          %a{:href => "/"} Logbook
        #user-navigation
          %ul.wat-cf
            - if current_user
              %li
                %a{:href => "/users/edit"}= current_user.display_name 
              %li
                %a{:href => "/"}= t("web-app-theme.settings", :default => "Dashboard")
              %li
                = link_to(t("web-app-theme.logout", :default => "Logout"), destroy_user_session_path)
            - else
              %li
                = link_to_unless_current(t('signup', :default => "Signup"), new_user_registration_path)
              %li
                = link_to_unless_current(t("web-app-theme.login", :default => "Login"), new_user_session_path)
        #main-navigation
          %ul.wat-cf
            %li
              %a{:href => "/"}= t("web-app-theme.settings", :default => "Dashboard")
      #wrapper.wat-cf.clearfix
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield

        #sidebar
          = yield :sidebar

    #footer
      .block
        %p
          Copyright &copy; #{Time.now.year} Logbook.