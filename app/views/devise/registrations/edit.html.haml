#box
  #block-signup.block
    %h2
      Edit #{resource_name.to_s.humanize} Details
    .content
      %br/
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form' }) do |f|
        = devise_error_messages!
        .group
          = f.label :email, :class => 'label'
          = f.text_field :email, :class => 'text_field'
        .group
          = f.label :name, :class => 'label'
          = f.text_field :name, :class => 'text_field'
        .group
          = f.label :password, :class => 'label'
          %i (leave blank if you don't want to change it)
          = f.password_field :password, :class => 'text_field'
        .group
          = f.label :password_confirmation, :class => 'label'
          = f.password_field :password_confirmation, :class => 'text_field'
        .group
          = f.label :current_password, :class => 'label'
          %i (we need your current password to confirm your changes)
          = f.password_field :current_password, :class => 'text_field'
        
        .group.navform.wat-cf
          %button.button{:type => 'submit'}
            =image_tag('web-app-theme/icons/tick.png', :alt => 'Sign in')
            Update
            
      %h3 Cancel my account
      Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete}.

