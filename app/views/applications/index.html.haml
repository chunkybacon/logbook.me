
#block-tables.block
  .secondary-navigation
    %ul.wat-cf
      %li= link_to t('.new_application', :default => "New application"), new_application_path, :class => 'custom_link'

  .content
    %h2.title= t('.title', :default => "Applications")
    .inner
      %table.table
        %thead
          %tr
            %th= Application.human_attribute_name :name
            %th= Application.human_attribute_name :api_key
            %th.last
  
        %tbody
          - for application in @applications
            %tr{ :class => cycle(:odd, :even) }
              %td.action= link_to application.name, application_entries_path(application)
              %td= link_to 'Config file', config_file_path(application.api_key)
              %td.last
                = link_to t('edit', :default => "Edit"), edit_application_path(application)
                = link_to t('destroy', :default => "Destroy"), application, :confirm => t('are_you_sure', :default => "Are you sure"), :method => :delete
